{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "lib": [
            "dom", "es2015"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "typeRoots": [
        "./node_modules/@types/"
        ],
        "atom": { "rewriteTsconfig": false }
    }
}