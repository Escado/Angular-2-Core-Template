{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "outDir": "wwwroot"
  },
  "exclude": [
    "node_modules",
    "aot",
    "ClientApp/main-aot.ts",
    "wwwroot"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}