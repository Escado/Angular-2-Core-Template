            "name": "Client -- Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceRoot}\\src\\Template.Client\\bin\\Debug\\netcoreapp1.1\\Template.Client.dll",
            "args": [],
            "cwd": "${workspaceRoot}\\src\\Template.Client",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "requireExactSource": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": ""
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}\\Views"
